<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>procedureroom</id>
	<name>Procedure Room</name>
	<version>1.0.0-SNAPSHOT</version>
	<package>org.openmrs.module.procedureroom</package>
	<author>Nicholas Ingosi</author>
	<description>
			Room where procedures are carried out including wound stitching, cleaning and tatanus injections
	</description>

	<activator>org.openmrs.module.procedureroom.ProcedureRoomActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/procedureroom/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>1.12.0</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.procedureroom.extension.html.AdminList</class>
	</extension>
	<require_modules>
		<require_module version="17.0.3">org.openmrs.module.kenyaemr</require_module>
		<require_module version="1.0.0-SNAPSHOT">org.openmrs.module.hospitalcore</require_module>
		<require_module version="${ehrconfigsVersion}">org.openmrs.module.ehrconfigs</require_module>
		<require_module version="1.2">org.openmrs.module.metadatadeploy</require_module>
	</require_modules>
	<aware_of_modules>
		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
	</aware_of_modules>
	
	
